{
  "ImageId":"${AMAZON_EC2_AMI_ID}",
  "InstanceType":"t3a.small",
  "KeyName":"ec2-rsa-kp",
  "IamInstanceProfile":{
    "Arn":"arn:aws:iam::${AWS_ACCOUNT_ID}:instance-profile/iam-ec2-rl"
  },
  "Placement":{
    "Tenancy":"default",
    "GroupName":"container-s2-ec2-kubernetes-pg",
    "PartitionNumber":2
  },
  "EbsOptimized":true,
  "BlockDeviceMappings":[{
    "DeviceName":"/dev/sdb",
    "Ebs":{
      "VolumeSize":10,
      "VolumeType":"gp3",
      "Encrypted":true,
      "KmsKeyId":"${AWS_KMS_KEY_ID}",
      "DeleteOnTermination":true
    }
  }],
  "NetworkInterfaces":[{
    "AssociatePublicIpAddress":false,
    "DeleteOnTermination":true,
    "DeviceIndex":0,
    "InterfaceType":"interface",
    "Groups":[
      "${AMAZON_VPC_SECURITY_GROUP_ID}"
    ]
  }],
  "PrivateDnsNameOptions":{
    "HostnameType":"ip-name"
  },
  "CreditSpecification":{
    "CpuCredits":"unlimited"
  },
  "CpuOptions":{
    "CoreCount":1,
    "ThreadsPerCore":2
  },
  "EnclaveOptions":{
    "Enabled":false
  },
  "Monitoring":{
    "Enabled":false
  },
  "InstanceInitiatedShutdownBehavior":"terminate",
  "HibernationOptions":{
    "Configured":false
  },
  "MaintenanceOptions":{
    "AutoRecovery":"disabled"
  },
  "DisableApiTermination":false,
  "DisableApiStop":false
}
