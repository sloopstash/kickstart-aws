{
  "ImageId":"${AMAZON_EC2_AMI_ID}",
  "InstanceType":"t3a.micro",
  "KeyName":"crm-ec2-key-pair",
  "IamInstanceProfile":{
    "Arn":"arn:aws:iam::${AWS_ACCOUNT_ID}:instance-profile/crm-iam-ec2-rl"
  },
  "Placement":{
    "Tenancy":"default",
    "GroupName":"crm-ec2-redis-pg",
    "PartitionNumber":2
  },
  "EbsOptimized":true,
  "BlockDeviceMappings":[{
    "DeviceName":"/dev/sdb",
    "Ebs":{
      "VolumeSize":5,
      "VolumeType":"gp3",
      "Encrypted":true,
      "KmsKeyId":"${AWS_KMS_KEY_ID}",
      "DeleteOnTermination":true
    }
  }],
  "SecurityGroups":[
    "crm-vpc-redis-sg"
  ],
  "PrivateDnsNameOptions":{
    "HostnameType":"ip-name"
  },
  "CreditSpecification":{
    "CpuCredits":"unlimited"
  },
  "CpuOptions":{
    "CoreCount":1,
    "ThreadsPerCore":2
  },
  "EnclaveOptions":{
    "Enabled":false
  },
  "Monitoring":{
    "Enabled":false
  },
  "InstanceInitiatedShutdownBehavior":"terminate",
  "HibernationOptions":{
    "Configured":false
  },
  "MaintenanceOptions":{
    "AutoRecovery":"disabled"
  },
  "DisableApiTermination":false,
  "DisableApiStop":false
}
