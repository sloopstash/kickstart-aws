{
  "ImageId":"${AMAZON_EC2_AMI_ID}",
  "InstanceType":"t3a.micro",
  "KeyName":"crm-ec2-key-pair",
  "IamInstanceProfile":{
    "Arn":"arn:aws:iam::${AWS_ACCOUNT_ID}:instance-profile/crm-iam-ec2-rl"
  },
  "Placement":{
    "Tenancy":"default"
  },
  "EbsOptimized":false,
  "NetworkInterfaces":[{
    "AssociatePublicIpAddress":true,
    "DeleteOnTermination":true,
    "DeviceIndex":0,
    "InterfaceType":"interface",
    "Groups":[
      "${AMAZON_VPC_SECURITY_GROUP_ID}"
    ]
  }],
  "PrivateDnsNameOptions":{
    "HostnameType":"ip-name"
  },
  "CreditSpecification":{
    "CpuCredits":"unlimited"
  },
  "CpuOptions":{
    "CoreCount":1,
    "ThreadsPerCore":2
  },
  "EnclaveOptions":{
    "Enabled":false
  },
  "Monitoring":{
    "Enabled":false
  },
  "InstanceInitiatedShutdownBehavior":"terminate",
  "HibernationOptions":{
    "Configured":false
  },
  "MaintenanceOptions":{
    "AutoRecovery":"disabled"
  },
  "DisableApiTermination":false,
  "DisableApiStop":false
}
